<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/settings"
        android:name="com.paya.presentation.ui.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/navigateToHomeFragment"
            app:destination="@id/home" />



    </fragment>


    <fragment
        android:id="@+id/home"
        android:name="com.paya.presentation.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/navigateToProfileFragment"
            app:destination="@id/profile" />

        <action
            android:id="@+id/navigateToCreateAccountFragment"
            app:destination="@id/createPersonalAccount" />

    </fragment>


    <fragment
        android:id="@+id/profile"
        android:name="com.paya.presentation.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/navigateToMarketFragment"
            app:destination="@id/market" />

    </fragment>


    <fragment
        android:id="@+id/market"
        android:name="com.paya.presentation.ui.market.MarketFragment"
        android:label="fragment_market"
        tools:layout="@layout/fragment_market">
        <action
            android:id="@+id/navigateToDividendFragment"
            app:destination="@id/dividend" />
    </fragment>

    <fragment
        android:id="@+id/dividend"
        android:name="com.paya.presentation.ui.dividend.DividendDetailFragment"
        android:label="fragment_dividend_detail"
        tools:layout="@layout/fragment_dividend_detail" />


    <fragment
        android:id="@+id/createPersonalAccount"
        android:name="com.paya.presentation.ui.createPersonalAccount.CreateAccountPersonalFragment"
        android:label="fragment_create_account_personal"
        tools:layout="@layout/fragment_create_account_personal">
        <action
            android:id="@+id/navigateToQuestion"
            app:destination="@id/questionFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/questionFragment"
        android:name="com.paya.presentation.ui.question.QuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/fragment_question">
        <action
            android:id="@+id/navigateToInvestment"
            app:destination="@id/investment" />

    </fragment>

    <fragment
        android:id="@+id/investment"
        android:name="com.paya.presentation.ui.investment.InvestmentFragment"
        android:label="fragment_investment"
        tools:layout="@layout/fragment_investment">
        <action
            android:id="@+id/navigateToFirstInformation"
            app:destination="@id/firstInformation"
            app:popUpToInclusive="true" />

    </fragment>




    <fragment
        android:id="@+id/connectBrokerage"
        android:name="com.paya.presentation.ui.createPersonalAccount.ConnectBrokerageFragment"
        android:label="fragment_connect_brokerage"
        tools:layout="@layout/fragment_connect_brokerage">
        <action
            android:id="@+id/navigateToHomeFragment"
            app:destination="@id/home" />
    </fragment>

</navigation>