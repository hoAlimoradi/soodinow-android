<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp">

        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="@color/line_color"
                android:dashGap="3dp"
                android:dashWidth="3dp" />

            <solid android:color="@android:color/transparent" />
            <size
                android:width="5dp"
                android:height="5dp" />
            <padding android:right="@dimen/margin_small" android:left="@dimen/margin_small"/>

        </shape>
    </item>
</layer-list>