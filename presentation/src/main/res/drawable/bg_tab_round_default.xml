                android:right="1dp"
                android:top="1dp" />
            <corners android:radius="@dimen/radius" />
            <solid android:color="#0D000000" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">

            <corners android:radius="@dimen/radius" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>