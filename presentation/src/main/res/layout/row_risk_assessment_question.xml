<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_tab_layout"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardConstraintLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_s"
        android:background="@drawable/shadow_8dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/riskAssessmentQuestionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/margin_l"
            android:layout_marginHorizontal="@dimen/margin_m"
            android:text="@string/soodinow_point"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/riskAssessmentQuestionParent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/margin_xl"
            android:layout_marginRight="@dimen/margin_m"
            android:layout_marginLeft="@dimen/margin_m"
            android:layout_marginTop= "@dimen/margin_l"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/riskAssessmentQuestionTitle">

            <LinearLayout

                android:id="@+id/riskAssessmentQuestionParentLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/radioGroup_sample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical"
                    android:visibility="gone"
                     >
                    <RadioButton
                        android:id="@+id/radio_sample_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="دریافت کد با ایمیل"
                        android:button="@null"
                        android:drawableRight="?android:attr/listChoiceIndicatorSingle"/>

                    <RadioButton
                        android:id="@+id/radio_sample_tow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="دریافت کد با پیامک"
                        android:button="@null"
                        android:drawableRight="?android:attr/listChoiceIndicatorSingle"/>

                </RadioGroup>



            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>