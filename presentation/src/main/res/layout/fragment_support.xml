<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.support.SupportFragment">


   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/bottom_round_corner_background">

      <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/image"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/margin_small"
          android:src="@drawable/image_support"
          app:layout_constraintTop_toTopOf="parent" />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/callTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/we_number_phone"
          android:textColor="@color/blue_gray_1"
          android:textSize="@dimen/text_size_medium"
          app:layout_constraintEnd_toEndOf="@id/image"
          app:layout_constraintTop_toTopOf="@id/image" />

      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/callNumber"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/call_support_number"
          android:textColor="@color/green"
          android:textSize="@dimen/text_size_medium"
          app:layout_constraintEnd_toStartOf="@id/callTitle"
          app:layout_constraintTop_toBottomOf="@id/callTitle" />

      <RelativeLayout
          android:layout_width="200dp"
          android:layout_height="@dimen/height"
          android:layout_marginBottom="40dp"
          android:background="@drawable/bg_button_green"
          app:layout_constraintBottom_toBottomOf="@id/image"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          calling="@{@string/call_support_number}">

         <androidx.appcompat.widget.AppCompatButton
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_centerInParent="true"
             android:background="@android:color/transparent"
             android:drawableEnd="@drawable/ic_call_support"
             android:drawablePadding="@dimen/margin_small"
             android:text="@string/direct_call"
             android:textColor="@color/white"
             android:textSize="@dimen/text_size_small"
             calling="@{@string/call_support_number}"/>

      </RelativeLayout>

      <pl.bclogic.pulsator4droid.library.PulsatorLayout
          android:id="@+id/pulsator"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginStart="@dimen/margin_small"
          android:layout_marginEnd="@dimen/margin_small"
          android:layout_marginBottom="@dimen/margin_small"
          app:layout_constraintBottom_toTopOf="@id/desc"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/image"
          app:pulse_color="@color/green"
          app:pulse_count="4"
          app:pulse_duration="3000"
          app:pulse_interpolator="Decelerate"
          app:pulse_repeat="0"
          app:pulse_startFromScratch="true"

          >
         <LinearLayout
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:background="@drawable/circle_green"
             android:gravity="center"
             android:orientation="vertical"
             android:layout_centerInParent="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_very_small"
                android:text="@string/online_chat"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_11sp" />
         </LinearLayout>
      </pl.bclogic.pulsator4droid.library.PulsatorLayout>




      <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_small"
          android:layout_marginBottom="@dimen/margin_medium"
          android:gravity="center"
          android:text="@string/call_support_desc"
          android:textColor="@color/purple_gray"
          android:textSize="@dimen/text_size_11sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</layout>