<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.investment.CalculateProfitCapitalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@{@string/calculate_profit_capital_toolbar_title}" />

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            style="@style/GeneralCardView"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_margin="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_calculate_profit_capital" />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            style="@style/GeneralCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCard">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_small">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_calculate_profit_capital_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/calculate_profit_capital_toolbar_title"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_calculate_profit_capital_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_very_small"
                        android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه است. لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_calculate_profit_capital_title" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_how_much_invest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/how_much_invest"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_calculate_profit_capital_desc" />


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/inputPrice"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:background="@drawable/round_corner_layout"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingStart="@dimen/margin_very_small"
                        android:paddingEnd="@dimen/margin_very_small"
                        android:singleLine="true"
                        android:text="26,000,000"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_small"
                        app:layout_constraintTop_toBottomOf="@id/txt_how_much_invest" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tomanInputPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_medium"
                        android:layout_marginStart="@dimen/margin_small"
                        android:gravity="center"
                        android:text="@string/toman"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintBottom_toBottomOf="@id/inputPrice"
                        app:layout_constraintStart_toStartOf="@id/inputPrice" />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/seekBarPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:elevation="2dp"
                        android:layoutDirection="rtl"
                        app:isb_indicator_text_size="18sp"
                        app:isb_max="50000000"
                        app:isb_min="1000000"
                        app:isb_progress="26000000"
                        app:isb_show_indicator="none"
                        app:isb_thumb_color="@color/green"
                        app:isb_thumb_size="20dp"
                        app:isb_track_background_color="@color/gray"
                        app:isb_track_background_size="4dp"
                        app:isb_track_progress_color="@color/gray"
                        app:isb_track_progress_size="4dp"
                        app:layout_constraintTop_toBottomOf="@id/inputPrice" />

                    <View
                        android:id="@+id/startViewSeekBar"
                        android:layout_width="4dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/gray"
                        app:layout_constraintStart_toStartOf="@id/seekBarPrice"
                        app:layout_constraintTop_toTopOf="@id/seekBarPrice" />

                    <View
                        android:id="@+id/endViewSeekBar"
                        android:layout_width="4dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="12dp"
                        android:background="@color/gray"
                        app:layout_constraintEnd_toEndOf="@id/seekBarPrice"
                        app:layout_constraintTop_toTopOf="@id/seekBarPrice" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/minSeekBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:gravity="center"
                        android:text="1,000,000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/startViewSeekBar" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tomanStartSeekBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:gravity="center"
                        android:text="@string/toman"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/minSeekBar" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/maxSeekBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:gravity="center"
                        android:text="50,000,000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/endViewSeekBar" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tomanEndSeekBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:gravity="center"
                        android:text="@string/toman"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/maxSeekBar" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/seekBarBarrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="tomanEndSeekBar,tomanStartSeekBar" />

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/profit_method_invest"
                        android:name="com.paya.presentation.ui.investment.ProfitMethodFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        app:layout_constraintTop_toBottomOf="@id/seekBarBarrier" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_select"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/select_item"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/profit_method_invest" />

                    <RadioButton
                        android:id="@+id/radioButtonWithdrawal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:button="@null"
                        android:drawableStart="@drawable/selector_check_radio"
                        android:drawablePadding="@dimen/margin_very_small"
                        android:layoutDirection="rtl"
                        android:text="برداشت مبلغی بصورت ماهیانه"
                        android:textColor="@color/purple_gray"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_select"
                        tools:ignore="RtlSymmetry"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_withdrawal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_very_small"
                        android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه است. لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:layout_constraintTop_toBottomOf="@id/radioButtonWithdrawal" />
                    <RadioButton
                        android:id="@+id/radioButtonDepositAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:button="@null"
                        android:drawableStart="@drawable/selector_check_radio"
                        android:drawablePadding="@dimen/margin_very_small"
                        android:layoutDirection="rtl"
                        android:text="واریز مبلغی بصورت ماهیانه"
                        android:textColor="@color/purple_gray"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:checked="true"
                        app:layout_constraintTop_toBottomOf="@id/txt_withdrawal"
                        tools:ignore="RtlSymmetry"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_deposit_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_very_small"
                        android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه است. لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:layout_constraintTop_toBottomOf="@id/radioButtonDepositAmount" />


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/inputAmount"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:background="@drawable/round_corner_layout"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingStart="@dimen/margin_very_small"
                        android:paddingEnd="@dimen/margin_very_small"
                        android:singleLine="true"
                        android:text="26,000,000"
                        android:textColor="#000000"
                        android:textSize="@dimen/text_size_small"
                        app:layout_constraintHorizontal_weight="7"
                        app:layout_constraintTop_toBottomOf="@id/txt_deposit_amount"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/txt_title_amount"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tomanInputAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_medium"
                        android:layout_marginStart="@dimen/margin_small"
                        android:gravity="center"
                        android:text="@string/toman"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintBottom_toBottomOf="@id/inputAmount"
                        app:layout_constraintStart_toStartOf="@id/inputAmount" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_title_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_very_small"
                        android:text="مبلغ واریزی هر ماهه"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:layout_constraintBottom_toBottomOf="@id/inputAmount"
                        app:layout_constraintTop_toTopOf="@id/inputAmount"
                        app:layout_constraintStart_toEndOf="@+id/inputAmount"
                        app:layout_constraintHorizontal_weight="3"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtSelectMonth"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:background="@drawable/round_corner_layout"
                        android:drawableStart="@drawable/ic_arrow_bottom"
                        android:paddingStart="@dimen/margin_small"
                        android:gravity="center"
                        android:text="13"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/inputAmount"
                        app:layout_constraintEnd_toStartOf="@+id/txt_title_month"
                        app:layout_constraintHorizontal_weight="4"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_title_month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_very_small"
                        android:text="چه روزی از هر ماهه"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:layout_constraintBottom_toBottomOf="@id/txtSelectMonth"
                        app:layout_constraintTop_toTopOf="@id/txtSelectMonth"
                        app:layout_constraintStart_toEndOf="@+id/txtSelectMonth"
                        app:layout_constraintHorizontal_weight="6"/>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/profit_method_price"
                        android:name="com.paya.presentation.ui.investment.ProfitMethodFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        app:layout_constraintTop_toBottomOf="@id/txtSelectMonth" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>