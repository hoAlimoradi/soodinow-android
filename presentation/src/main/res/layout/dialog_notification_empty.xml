<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/shadow_general"
    tools:context=".ui.profile.dialog.ChartProfileDialog">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeBtn"
        android:layout_width="@dimen/height_medium"
        android:layout_height="@dimen/height_medium"
        android:padding="@dimen/margin_s"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_l"
        android:text="پیام ها"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_l"
        app:layout_constraintBottom_toBottomOf="@id/closeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/closeBtn"
        app:layout_constraintTop_toTopOf="@id/closeBtn" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/margin_l"
        android:gravity="center"
        android:text="شما هیچ پیامی ندارید"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_l"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/closeBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>
