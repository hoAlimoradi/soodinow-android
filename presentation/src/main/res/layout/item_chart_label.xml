<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/label_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/round_small_radius_corner_layout"
        tools:backgroundTint="@color/red"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/label_color"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_xs"
        android:layout_marginEnd="@dimen/margin_very_small"
        tools:text="افق ملت"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>