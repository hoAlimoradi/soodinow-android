<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.paya.domain.tools.Resource" />

        <import type="com.paya.presentation.viewmodel.ProfileViewModel" />

        <variable
            name="viewModel"
            type="ProfileViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg"
            android:visibility="invisible">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.04" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.96" />


            <View
                android:id="@+id/bg_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/bg_card"
                app:layout_constraintBottom_toTopOf="@id/viewGuidLineBgCard"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewGuidLineBgCard"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_l"
                app:layout_constraintTop_toTopOf="@id/card" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/alarm"
                android:layout_width="@dimen/height"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:src="@drawable/ic_alarm"

                app:layout_constraintStart_toEndOf="@+id/start_guideline"
                app:layout_constraintTop_toBottomOf="@+id/top_guideline" />


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_very_small"
                android:maxHeight="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alarm" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/triangle_profile"
                app:layout_constraintBottom_toTopOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@id/card"
                app:layout_constraintStart_toStartOf="@id/card" />

            <View
                android:id="@+id/card"
                android:layout_marginBottom="@dimen/space_bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                app:cardBackgroundColor="@color/white"
                android:background="@drawable/shadow_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pager" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/subTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_l"
                android:layout_marginVertical="@dimen/margin_s"
                android:elevation="2dp"
                android:text="بازدهی"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_m"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@id/card"
                app:layout_constraintStart_toStartOf="@id/card"
                app:layout_constraintTop_toTopOf="@id/card" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/chartTabLayout"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginTop="@dimen/margin_s"
                android:elevation="2dp"
                app:layout_constraintEnd_toEndOf="@id/card"
                app:layout_constraintStart_toStartOf="@id/card"
                app:layout_constraintTop_toBottomOf="@id/subTitle"
                app:tabGravity="fill"
                app:tabIndicator="@color/japanese_laurel_green"
                app:tabIndicatorColor="@color/japanese_laurel_green"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorHeight="3dp"
                app:tabMode="fixed"
                app:tabPaddingEnd="25dp"
                app:tabPaddingStart="25dp"
                app:tabSelectedTextColor="@color/japanese_laurel_green">


                <com.google.android.material.tabs.TabItem
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ماه" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="هفته" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="روز" />
            </com.google.android.material.tabs.TabLayout>

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="@id/card"
                app:layout_constraintEnd_toEndOf="@id/card"
                app:layout_constraintStart_toStartOf="@id/card"
                app:layout_constraintTop_toBottomOf="@id/chartTabLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="@dimen/margin_s"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <fragment
                        android:id="@+id/appropriate_investment_fragment"
                        android:name="com.paya.presentation.ui.investment.AppropriateInvestmentFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/chart" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="133dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="@dimen/margin_l"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginBottom="@dimen/margin_l"
                        android:background="@drawable/round_corner_layout_border_gray"
                        android:text="سوابق سبد سرمایه گذاری"
                        android:textColor="@color/purple_gray"
                        android:textSize="@dimen/text_size_xs"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/appropriate_investment_fragment" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <include
            android:id="@+id/empty"
            layout="@layout/empty_card_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:title="@{viewModel.errorMessage}"
            tools:visibility="gone" />


        <include
            layout="@layout/loading_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:resource="@{(Resource) viewModel.loading}"
            tools:visibility="gone" />

    </FrameLayout>

</layout>