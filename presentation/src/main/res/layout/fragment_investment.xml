<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.investment.InvestmentFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/inner_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toTopOf="@+id/inner_top_guideline"
        app:layout_constraintStart_toEndOf="@+id/start_guideline"
        app:layout_constraintTop_toBottomOf="@id/top_guideline" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:gravity="center"
        android:text="نمره سرمایه گذاری شما"
        android:textColor="@color/purple_gray"
        android:textSize="@dimen/text_size_title_small"
        app:layout_constraintBottom_toTopOf="@id/inner_top_guideline"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:adjustViewBounds="true"
        android:src="@drawable/image_invesment_score"
        app:layout_constraintTop_toBottomOf="@id/titleToolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_small">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مدیریت ریسک"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_very_small"
                        android:text="@string/fake_content"
                        android:textSize="@dimen/text_size_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title" />

                    <LinearLayout
                        android:id="@+id/gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/description">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:text="75 درصد صندوق طلا"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <at.grabner.circleprogress.CircleProgressView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cpv_autoTextSize="true"
                            app:cpv_barColor="@color/dark_gray_3"
                            app:cpv_barWidth="12dp"
                            app:cpv_innerContourSize="0dp"
                            app:cpv_maxValue="100"
                            app:cpv_outerContourSize="0dp"
                            app:cpv_rimColor="@color/light_gray"
                            app:cpv_rimWidth="8dp"
                            app:cpv_seekMode="true"
                            app:cpv_showUnit="true"
                            app:cpv_textColor="@color/black"
                            app:cpv_textScale="1"
                            app:cpv_unit="%"
                            app:cpv_unitColor="@color/black"
                            app:cpv_unitPosition="right_top"
                            app:cpv_unitScale="1"
                            app:cpv_value="75" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gold">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:text="45 درصد صندوق سهام"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <at.grabner.circleprogress.CircleProgressView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cpv_autoTextSize="true"
                            app:cpv_barColor="@color/dark_gray"
                            app:cpv_barWidth="12dp"
                            app:cpv_innerContourSize="0dp"
                            app:cpv_maxValue="100"
                            app:cpv_outerContourSize="0dp"
                            app:cpv_rimColor="@color/light_gray"
                            app:cpv_rimWidth="8dp"
                            app:cpv_seekMode="true"
                            app:cpv_showUnit="true"
                            app:cpv_textColor="@color/black"
                            app:cpv_textScale="1"
                            app:cpv_unit="%"
                            app:cpv_unitColor="@color/black"
                            app:cpv_unitPosition="right_top"
                            app:cpv_unitScale="1"
                            app:cpv_value="45" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/stock">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:text="15 درصد صندوق درامد ثابت"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <at.grabner.circleprogress.CircleProgressView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            app:cpv_autoTextSize="true"
                            app:cpv_barColor="@color/dark_gray_2"
                            app:cpv_barWidth="12dp"
                            app:cpv_innerContourSize="0dp"
                            app:cpv_maxValue="100"
                            app:cpv_outerContourSize="0dp"
                            app:cpv_rimColor="@color/light_gray"
                            app:cpv_rimWidth="8dp"
                            app:cpv_seekMode="true"
                            app:cpv_showUnit="true"
                            app:cpv_textColor="@color/black"
                            app:cpv_textScale="1"
                            app:cpv_unit="%"
                            app:cpv_unitColor="@color/black"
                            app:cpv_unitPosition="right_top"
                            app:cpv_unitScale="1"
                            app:cpv_value="15" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/risk_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="تغییر دستی درصد ریسک"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/income" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/risk_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="@string/fake_content"
                        android:textSize="@dimen/text_size_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/risk_title" />

                    <com.warkiz.widget.IndicatorSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:isb_indicator_color="@color/purple"
                        app:isb_indicator_text_color="@color/colorAccent"
                        app:isb_indicator_text_size="18sp"
                        app:isb_max="10"
                        app:isb_min="-10"
                        app:isb_only_thumb_draggable="false"
                        app:isb_progress="5"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="rounded_rectangle"
                        app:isb_show_tick_marks_type="none"
                        app:isb_show_tick_texts="true"
                        app:isb_thumb_color="@color/dark_gray_3"
                        app:isb_thumb_size="20dp"
                        app:isb_tick_marks_size="13dp"
                        app:isb_tick_texts_color="@color/dark_gray_2"
                        app:isb_tick_texts_size="15sp"
                        app:isb_ticks_count="5"
                        app:isb_track_background_color="@color/light_gray"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/purple"
                        app:isb_track_progress_size="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/risk_description" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/radius_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <fragment
                        android:id="@+id/appropriate_investment_fragment"
                        android:name="com.paya.presentation.ui.investment.AppropriateInvestmentFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_32"
                        app:layout_constraintTop_toBottomOf="@id/submit_btn" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_32"
                        android:layout_marginTop="@dimen/margin_32"
                        android:backgroundTint="@color/green"
                        android:paddingHorizontal="48dp"
                        android:paddingVertical="@dimen/margin_small"
                        android:text="شروع سرمایه گذاری"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>