<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/openAutomaticInvestmentAccountCardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_purple_card" >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/AddInventoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="  افزودن موجودی  "
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal"
        android:drawableEnd="@drawable/ic_group_pluse_green_circle_background"
        android:translationX="-8dp"
        android:layout_marginTop="@dimen/margin_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wealthValueEditText" />



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/wealthValueEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_36dp"
        android:cursorVisible="false"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:layout_marginHorizontal="@dimen/margin_l"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1000" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wealthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/toman_unit"
        android:textColor="@color/white"

        android:layout_marginHorizontal="@dimen/margin_m"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wealthValueEditText"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>