<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        tools:context=".ui.activitiesReport.ActivitiesReportFragment">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@{@string/activity_report}"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginHorizontal="@dimen/margin_xxxl"
            android:layout_marginTop="@dimen/margin_m"
            android:background="@drawable/bg_tab_layout_mini"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:tabBackground="@drawable/selector_tab_orange"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/brokerage_tab_color"/>

        <View
            android:id="@+id/bg_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/round_corner_top_layout_white"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/margin_l"/>

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/bg_view_pager"
            app:layout_constraintBottom_toBottomOf="@id/bg_view_pager"
            app:layout_constraintStart_toStartOf="@id/bg_view_pager"
            app:layout_constraintEnd_toEndOf="@id/bg_view_pager"
            android:id="@+id/pager"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
