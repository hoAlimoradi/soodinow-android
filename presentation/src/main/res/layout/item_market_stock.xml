<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/margin_medium"
    android:layout_marginVertical="@dimen/margin_very_small"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/radius_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingStart="@dimen/margin_small"
        android:paddingVertical="@dimen/margin_very_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_name"
            android:background="@drawable/left_round_purple_background"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/margin_medium"
            android:paddingVertical="@dimen/margin_4_dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="ایران خودرو"
            android:textSize="@dimen/text_size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintEnd_toStartOf="@id/txt_name"
            app:srcCompat="@drawable/ic_bookmark"
            android:layout_marginEnd="@dimen/margin_small"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="@dimen/margin_medium"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_last_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/last_deal"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_toman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toman"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_last_deal_price"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/margin_very_small"
            android:id="@+id/txt_last_deal_price"
            android:layout_marginStart="@dimen/margin_very_small"
            app:layout_constraintTop_toBottomOf="@id/txt_last_deal"
            app:layout_constraintStart_toEndOf="@id/txt_toman"
            style="@style/PurpleTitleTextView"
            android:text="12500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:padding="@dimen/margin_4_dp"
            android:background="@drawable/popup_percent_background"
            android:id="@+id/txt_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5%"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toTopOf="@id/txt_last_deal_price"
            app:layout_constraintStart_toEndOf="@id/txt_last_deal_price" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_path"
            app:layout_constraintTop_toBottomOf="@id/txt_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_small"
            app:srcCompat="@drawable/ic_path"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="@dimen/margin_very_small"
            android:layout_height="@dimen/margin_very_small"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مجاز"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_last_deal_price"
            app:layout_constraintEnd_toStartOf="@id/img_path"
            android:layout_marginEnd="@dimen/margin_very_small"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dayRecycler"
            app:layout_constraintTop_toBottomOf="@+id/txt_last_deal_price"
            android:orientation="horizontal"
            tools:listitem="@layout/item_day"
            tools:itemCount="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.github.mikephil.charting.charts.LineChart
            chartData="@{viewModel.pointsLiveData}"
            android:id="@+id/chart"
            android:layout_marginEnd="@dimen/margin_small"
            app:layout_constraintTop_toBottomOf="@id/dayRecycler"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_chart_height" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sell"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintTop_toBottomOf="@id/chart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_sell_price"
            android:layout_marginEnd="@dimen/margin_very_small"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_sell_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12500"
            android:textSize="@dimen/text_size_title_small"
            android:textColor="@color/green"
            app:layout_constraintTop_toBottomOf="@id/chart"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintEnd_toStartOf="@id/txt_sell"
            android:layout_marginEnd="@dimen/margin_very_small"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginStart="@dimen/margin_very_small"
            android:id="@+id/txt_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintTop_toBottomOf="@id/chart"
            app:layout_constraintStart_toEndOf="@id/txt_buy_price"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_buy_price"
            android:layout_marginEnd="@dimen/margin_very_small"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_buy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14500"
            android:textSize="@dimen/text_size_title_small"
            android:textColor="@color/purple"
            app:layout_constraintTop_toBottomOf="@id/chart"
            android:layout_marginTop="@dimen/margin_small"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/margin_very_small"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>