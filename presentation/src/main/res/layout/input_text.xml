<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="androidx.databinding.ObservableField"/>

        <variable
            name="label"
            type="java.lang.String" />

        <variable
            name="content"
            type="ObservableField&lt;java.lang.String>" />

        <variable
            name="hintLabel"
            type="java.lang.String" />
    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_4_dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{label}"
            tools:text="نام کاربری"
            android:layout_marginTop="@dimen/margin_4_dp" />

        <com.paya.presentation.utils.ErrorEditTextLayout
            android:id="@+id/errorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_s"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/inputContentEditText"
                hintLabel="@{hintLabel}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_layout"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/margin_very_small"
                android:singleLine="true"
                android:text="@={content}"
                android:textColor="#000000" />
        </com.paya.presentation.utils.ErrorEditTextLayout>
    </LinearLayout>

</layout>