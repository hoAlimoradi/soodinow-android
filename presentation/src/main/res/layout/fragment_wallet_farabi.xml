<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/margin_60dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <View
                android:id="@+id/imageCardView"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="@dimen/margin_m"
                android:background="@drawable/shadow_8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="2dp"
                android:padding="@dimen/margin_m"
                android:src="@drawable/ic_logo_soodinow"
                app:layout_constraintBottom_toBottomOf="@+id/imageCardView"
                app:layout_constraintEnd_toEndOf="@+id/imageCardView"
                app:layout_constraintStart_toStartOf="@+id/imageCardView"
                app:layout_constraintTop_toTopOf="@+id/imageCardView"
                tools:src="@drawable/ic_farabi" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_l"
                android:lineSpacingExtra="@dimen/margin_m"
                android:textColor="@color/deep_fir_green"
                android:textSize="@dimen/text_size_xs"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageCardView" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_xl"
                android:background="@color/gray"
                app:layout_constraintTop_toBottomOf="@id/txtDesc" />


            <RadioGroup
                android:id="@+id/radioGroupPriceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_xl"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/line">

                <RadioButton
                    android:id="@+id/radioButtonCredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/japanese_laurel_green"
                    android:checked="true"
                    android:layoutDirection="rtl"
                    android:text="@string/increase_credit_price"
                    android:textColor="@color/nevada"
                    android:textSize="@dimen/text_size_10sp" />

                <RadioButton
                    android:id="@+id/radioButtonCharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/japanese_laurel_green"
                    android:layoutDirection="rtl"
                    android:text="@string/this_charge_price"
                    android:textColor="@color/nevada"
                    android:textSize="@dimen/text_size_10sp" />

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtDescBrokerage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_xl"
                android:lineSpacingExtra="@dimen/margin_m"
                android:textColor="@color/deep_fir_green"
                android:textSize="@dimen/text_size_s"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtDescBrokerageSoodinow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_l"
                android:layout_marginTop="@dimen/margin_xl"
                android:layout_marginBottom="@dimen/margin_xxxl"
                android:lineSpacingExtra="@dimen/margin_m"
                android:textColor="@color/deep_fir_green"
                android:textSize="@dimen/text_size_xs"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>