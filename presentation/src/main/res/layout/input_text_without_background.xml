<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4_dp">
    <com.paya.presentation.utils.ErrorEditTextLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_4_dp"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="@dimen/margin_s"
            android:textSize="@dimen/text_size_s"
            tools:text="نام کاربری" />

        <com.paya.presentation.utils.ClearableEditText
            android:id="@+id/inputContentEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height"
            android:layout_marginTop="@dimen/margin_4_dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:paddingEnd="@dimen/margin_very_small"
            android:paddingStart="@dimen/margin_very_small"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_s" />
    </com.paya.presentation.utils.ErrorEditTextLayout>

</androidx.constraintlayout.widget.ConstraintLayout>