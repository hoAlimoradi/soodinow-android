<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_round_corner_background"
    tools:context=".ui.settings.SettingsFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/GeneralCardView"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:background="@drawable/bg_setting_logo"
        android:elevation="2dp"
        android:src="@drawable/ic_logo_soodinow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/phoneTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:text="019999999"
        android:elevation="2dp"
        android:textColor="@color/green"
        android:layout_marginTop="@dimen/margin_small"
        android:textSize="@dimen/text_size_small"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/completeProfileTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneTxt"
        android:text="@string/complete_profile"
        android:elevation="2dp"
        android:textColor="@color/blue_light"
        android:layout_marginTop="@dimen/margin_very_small"
        android:textSize="@dimen/text_size_10sp"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintTop_toBottomOf="@+id/completeProfileTxt"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:layout_marginTop="@dimen/margin_large">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_very_small"
            android:paddingStart="@dimen/margin_very_small">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>