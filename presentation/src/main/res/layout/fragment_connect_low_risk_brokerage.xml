<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.createPersonalAccount.ConnectBrokerageFragment">

    <data>

        <import type="com.paya.domain.tools.Resource" />

        <import type="com.paya.presentation.viewmodel.ConnectLowRiskBrokerageViewModel" />

        <variable
            name="viewModel"
            type="ConnectLowRiskBrokerageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">



        <View
            android:id="@+id/bg_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_card"
            app:layout_constraintBottom_toTopOf="@id/viewGuidLineBgCard"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewGuidLineBgCard"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_l"
            app:layout_constraintTop_toTopOf="@id/bgCardView" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@{@string/connect_brokerage}" />


        <include
            android:id="@+id/cardAccount"
            layout="@layout/brokerage_account_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_xxxl"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


        <androidx.cardview.widget.CardView
            android:id="@+id/bgCardView"
            style="@style/GeneralCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardAccount">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_small">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginHorizontal="@dimen/margin_xxxl"
                        android:layout_marginTop="@dimen/margin_l"
                        android:background="@drawable/bg_tab_layout_mini"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tabBackground="@drawable/selector_tab_brokerage"
                        app:tabGravity="fill"
                        app:tabIndicatorHeight="0dp"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/brokerage_tab_color">

                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/soodinowTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/soodinow" />

                        <com.google.android.material.tabs.TabItem
                            android:id="@+id/brokeragesTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/brokerages" />


                    </com.google.android.material.tabs.TabLayout>


                    <View
                        android:id="@+id/imageCardView"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="@dimen/margin_l"
                        android:background="@drawable/shadow_8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:elevation="2dp"
                        android:padding="@dimen/margin_m"
                        android:src="@{viewModel.tabCheckedIsSoodinow ? @drawable/ic_logo_soodinow : @drawable/ic_farabi}"
                        app:layout_constraintBottom_toBottomOf="@+id/imageCardView"
                        app:layout_constraintEnd_toEndOf="@+id/imageCardView"
                        app:layout_constraintStart_toStartOf="@+id/imageCardView"
                        app:layout_constraintTop_toTopOf="@+id/imageCardView"
                        tools:src="@drawable/ic_farabi" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDesc"
                        arrayStringText="@{viewModel.tabCheckedIsSoodinow ? @stringArray/brokerage_desc_soodinow : @stringArray/brokerage_desc}"
                        colorArrayText="@{@color/green}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_l"
                        android:layout_marginTop="@dimen/margin_l"
                        android:lineSpacingExtra="@dimen/margin_m"
                        android:textColor="@color/deep_fir_green"
                        android:textSize="@dimen/text_size_xxs"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageCardView" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/margin_m"
                        android:layout_marginTop="@dimen/margin_xl"
                        android:background="@color/gray"
                        app:layout_constraintTop_toBottomOf="@id/txtDesc" />


                    <RadioGroup
                        android:id="@+id/radioGroupPriceType"
                       android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_l"
                        android:layout_marginTop="@dimen/margin_xl"
                        app:layout_constraintTop_toBottomOf="@id/line">

                        <RadioButton
                            android:id="@+id/radioButtonCredit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/japanese_laurel_green"
                            android:checked="true"
                            android:layoutDirection="rtl"
                            android:text="@string/increase_credit_price"
                            android:textColor="@color/nevada"
                            android:textSize="@dimen/text_size_10sp" />

                        <RadioButton
                            android:id="@+id/radioButtonCharge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/japanese_laurel_green"
                            android:layoutDirection="rtl"
                            android:text="@string/this_charge_price"
                            android:textColor="@color/nevada"
                            android:textSize="@dimen/text_size_10sp" />

                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDescBrokerage"
                        arrayStringText="@{@stringArray/brokerage_desc_bottom}"
                        colorArrayText="@{@color/green}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_l"
                        android:layout_marginTop="@dimen/margin_xl"
                        android:lineSpacingExtra="@dimen/margin_m"
                        android:textColor="@color/deep_fir_green"
                        android:textSize="@dimen/text_size_xxs"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/bottom_barrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="txtDescBrokerage,radioGroupPriceType"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/addInvestBtn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_medium"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:background="@drawable/bg_button_green"
                        android:text="@string/create_account"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_m"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/bottom_barrier" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>

        <include
            layout="@layout/loading_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:resource="@{(Resource) viewModel.status}"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>