<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4_dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/option_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_white"
        android:layout_width="@dimen/margin_32"
        android:layout_height="@dimen/margin_32"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="@dimen/margin_4_dp"
        android:id="@+id/option_title_txt"
        tools:text="اصلا درآمدم به پس انداز نمیرسه"
        android:textSize="@dimen/text_size_very_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/option_select"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:layout_marginTop="@dimen/margin_very_small"
        android:background="@drawable/round_corner_layout"
        android:enabled="true"
        android:gravity="center"
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:paddingStart="@dimen/margin_very_small"
        android:paddingEnd="@dimen/margin_very_small"
        android:singleLine="true"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_m"
        android:layout_marginBottom="@dimen/margin_4_dp"
        app:layout_constraintTop_toBottomOf="@id/option_select"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>