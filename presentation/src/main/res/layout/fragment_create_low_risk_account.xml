<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        tools:context=".ui.createLowRiskAccount.CreateLowRiskAccountFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/inner_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toTopOf="@+id/inner_top_guideline"
            app:layout_constraintStart_toEndOf="@+id/start_guideline"
            app:layout_constraintTop_toBottomOf="@id/top_guideline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/create_low_risk_account"
            android:textColor="@color/purple_gray"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toTopOf="@id/inner_top_guideline"
            app:layout_constraintEnd_toStartOf="@id/end_guideline"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            android:id="@+id/title_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/titleToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/image_accout_without_risk"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_img">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/radius_card">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_small">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/create_low_risk_account"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_very_small"
                            android:text="@string/fake_content"
                            android:textSize="@dimen/text_size_11sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/title" />


                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_1"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.3333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline_2"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.6666"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <FrameLayout
                            android:id="@+id/profit_layout_1"
                            app:layout_constraintTop_toBottomOf="@id/description"
                            android:layout_marginTop="@dimen/margin_medium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/guideline_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <include layout="@layout/item_profit_estimate"/>

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/profit_layout_2"
                            app:layout_constraintTop_toBottomOf="@id/description"
                            android:layout_marginTop="@dimen/margin_medium"
                            app:layout_constraintStart_toStartOf="@id/guideline_1"
                            app:layout_constraintEnd_toStartOf="@id/guideline_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <include layout="@layout/item_profit_estimate"/>

                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/profit_layout_3"
                            app:layout_constraintTop_toBottomOf="@id/description"
                            android:layout_marginTop="@dimen/margin_medium"
                            app:layout_constraintStart_toStartOf="@id/guideline_2"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <include layout="@layout/item_profit_estimate"/>

                        </FrameLayout>

                        <fragment
                            android:id="@+id/appropriate_investment_fragment"
                            android:name="com.paya.presentation.ui.investment.AppropriateInvestmentFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            app:layout_constraintTop_toBottomOf="@id/profit_layout_3" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/risk_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:text="تغییر دستی درصد ریسک"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_small"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/appropriate_investment_fragment" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/risk_description"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/fake_content"
                            android:textSize="@dimen/text_size_11sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/risk_title" />

<!--                        <com.warkiz.widget.IndicatorSeekBar-->
<!--                            android:id="@+id/seekBar"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            app:isb_indicator_color="@color/purple"-->
<!--                            app:isb_indicator_text_color="@color/colorAccent"-->
<!--                            app:isb_indicator_text_size="18sp"-->
<!--                            app:isb_max="10"-->
<!--                            app:isb_min="-10"-->
<!--                            app:isb_only_thumb_draggable="false"-->
<!--                            app:isb_progress="5"-->
<!--                            app:isb_seek_smoothly="true"-->
<!--                            app:isb_show_indicator="rounded_rectangle"-->
<!--                            app:isb_show_tick_marks_type="none"-->
<!--                            app:isb_show_tick_texts="true"-->
<!--                            app:isb_thumb_color="@color/dark_gray_3"-->
<!--                            app:isb_thumb_size="20dp"-->
<!--                            app:isb_tick_marks_size="13dp"-->
<!--                            app:isb_tick_texts_color="@color/dark_gray_2"-->
<!--                            app:isb_tick_texts_size="15sp"-->
<!--                            app:isb_ticks_count="5"-->
<!--                            app:isb_track_background_color="@color/light_gray"-->
<!--                            app:isb_track_background_size="2dp"-->
<!--                            app:isb_track_progress_color="@color/purple"-->
<!--                            app:isb_track_progress_size="4dp"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/risk_description" />-->

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/radius_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/simulation_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_medium"
                            android:backgroundTint="@color/purple"
                            android:paddingHorizontal="@dimen/margin_medium"
                            android:text="شبیه سازی این سرمایه گذازی"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/submit_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_32"
                            android:layout_marginTop="@dimen/margin_32"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:backgroundTint="@color/green"
                            android:paddingHorizontal="48dp"
                            android:paddingVertical="@dimen/margin_small"
                            android:text="شروع سرمایه گذاری"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>