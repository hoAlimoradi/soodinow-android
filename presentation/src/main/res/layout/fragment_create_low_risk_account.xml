<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.paya.presentation.viewmodel.CreateLowRiskAccountViewModel" />

        <import type="com.paya.domain.tools.Resource" />

        <variable
            name="viewModel"
            type="CreateLowRiskAccountViewModel" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        tools:context=".ui.createLowRiskAccount.CreateLowRiskAccountFragment">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:label="@{@string/create_low_risk_account}"
            app:layout_constraintTop_toTopOf="parent" />


        <include
            android:id="@+id/cardAccount"
            layout="@layout/low_risk_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_xxxl"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_small"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/radius_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardAccount">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:paddingTop="@dimen/margin_small">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_how_much_invest"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_m"
                        android:text="@string/how_much_invest"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_s"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <com.paya.presentation.utils.InputPrice
                        android:id="@+id/inputPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_m"
                        android:layout_marginTop="@dimen/margin_m"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_how_much_invest" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/margin_m"
                        android:background="@color/light_gray"
                        app:layout_constraintTop_toBottomOf="@+id/inputPrice" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtCreateAccountWithoutRisk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_m"
                        android:layout_marginTop="@dimen/margin_l"
                        android:text="@string/create_account_without_risk"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_s"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtListCreateAccountChartDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_m"
                        android:layout_marginTop="@dimen/margin_m"
                        android:textColor="@color/deep_fir_green"
                        android:textSize="@dimen/text_size_xxs"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtCreateAccountWithoutRisk"
                        arrayStringText="@{@stringArray/create_low_risk_list}"
                        colorArrayText="@{@color/orange}"
                        android:lineSpacingExtra="@dimen/margin_m"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_chart_height"
                        android:layout_marginTop="@dimen/margin_very_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtListCreateAccountChartDesc" />


                    <fragment
                        android:id="@+id/appropriate_investment_fragment"
                        android:name="com.paya.presentation.ui.investment.AppropriateInvestmentFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        app:layout_constraintTop_toBottomOf="@id/chart" />


                    <Button
                        android:id="@+id/submit_btn"
                        style="@style/SubmitButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_medium"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:text="@string/submit_and_continue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/appropriate_investment_fragment" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </ScrollView>

        </androidx.cardview.widget.CardView>

        <include
            layout="@layout/loading_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:resource="@{(Resource) viewModel.lowRiskResource}"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>