<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accountCardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_cards">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_s"
        android:layout_marginEnd="@dimen/margin_m"
        android:scaleType="center"
        android:src="@drawable/ic_logo_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/accountSubCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_sub_cards"
        android:layout_marginBottom="@dimen/margin_m"
        android:text="@string/usable_assets"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wealthValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="50.000"
        android:textColor="@color/white"

        android:textSize="@dimen/text_size_xxxl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_m"
        android:gravity="top"
        android:text="(تومان)"
        android:paddingBottom="@dimen/margin_m"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xs"
        app:layout_constraintBottom_toBottomOf="@+id/wealthValue"
        app:layout_constraintEnd_toStartOf="@+id/wealthValue" />

</androidx.constraintlayout.widget.ConstraintLayout>