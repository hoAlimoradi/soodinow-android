<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:background="@drawable/row_market_round_corner_card_layout"
        android:maxHeight="150dp"
        android:minHeight="100dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_horizontal_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/marketIcon"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_market_gold"
            app:layout_constraintBottom_toTopOf="@id/center_horizontal_guideline"
            app:layout_constraintStart_toEndOf="@+id/start_guideline"
            app:layout_constraintTop_toBottomOf="@id/top_guideline"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/marketTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:text="شاخص کل"
            android:textColor="@color/blue_light"
            android:textSize="@dimen/text_size_11sp"
            app:layout_constraintBottom_toTopOf="@id/center_horizontal_guideline"
            app:layout_constraintEnd_toStartOf="@id/end_guideline"
            app:layout_constraintStart_toEndOf="@+id/marketIcon"
            app:layout_constraintTop_toBottomOf="@id/top_guideline"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/centerLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layerType="software"
            android:src="@drawable/ic_line"
            app:layout_constraintEnd_toStartOf="@id/end_guideline"
            app:layout_constraintStart_toEndOf="@+id/start_guideline"
            app:layout_constraintTop_toBottomOf="@id/center_horizontal_guideline" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/marketPercentageIcon"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_4_dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_market_downturn"
            app:layout_constraintBottom_toTopOf="@id/marketPercentageValue"
            app:layout_constraintEnd_toStartOf="@id/end_guideline"
            app:layout_constraintTop_toBottomOf="@+id/centerLine"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/marketPercentageValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:gravity="center_vertical"
            tools:text="0 %"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11sp"
            app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
            app:layout_constraintEnd_toStartOf="@id/end_guideline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/marketWealthValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_very_small"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:text="1.258.400"
            android:textColor="@color/black"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@id/bottom_guideline"
            app:layout_constraintEnd_toStartOf="@id/marketPercentageIcon"
            app:layout_constraintStart_toEndOf="@+id/start_guideline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/marketWealthCurrencyValue"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/margin_very_small"
            android:layout_marginBottom="@dimen/margin_4_dp"
            android:elevation="2dp"
            android:gravity="bottom"
            android:text="@string/toman"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_11sp"
            app:layout_constraintBottom_toTopOf="@id/marketWealthValue"
            app:layout_constraintStart_toEndOf="@+id/start_guideline"
            app:layout_constraintTop_toBottomOf="@+id/centerLine" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>