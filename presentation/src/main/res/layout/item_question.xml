<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_very_small">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_question_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_green"
        android:gravity="center"
        android:padding="@dimen/margin_very_small"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_m"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_very_small"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/txt_question_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/fake_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/option_recycler"
        tools:listitem="@layout/item_option"
        tools:itemCount="4"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>