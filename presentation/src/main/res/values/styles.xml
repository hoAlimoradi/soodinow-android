<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TitleTextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_gray</item>
    </style>

    <style name="PurpleTitleTextView" parent="TitleTextView">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
    </style>

    <style name="SubtitleTextView">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:textColor">@color/blue_gray</item>
    </style>

    <style name="TopRoundedCornerLayout">
        <item name="android:background">@drawable/top_round_corner</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/green</item>
        <item name="itemIconTint">@drawable/selector_menu</item>
        <item name="itemTextColor">@drawable/selector_menu</item>
        <item name="color">@color/blue_gray</item>
        <item name="itemIconSize">20dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="GeneralCardView">
        <item name="cardCornerRadius">@dimen/radius_card</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/dark_gray</item>
    </style>

</resources>