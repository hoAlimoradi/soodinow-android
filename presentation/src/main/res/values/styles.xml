<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="TextAppearance.FontPathFarsiRegular" parent="android:TextAppearance">
        <item name="fontPath">@string/font_farsi_regular</item>
    </style>

    <style name="TextAppearance.FontPathRegular" parent="android:TextAppearance">
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="TextAppearance.FontPathBoldRegular" parent="android:TextAppearance">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="TitleTextView">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_xxl</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/pea_green</item>
    </style>

    <style name="TitleCompletePasswordTextView" parent="TitleTextView">
        <item name="android:textSize">@dimen/text_size_xl</item>
    </style>

    <style name="PurpleTitleTextView" parent="TitleTextView">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/text_size_title_small</item>
    </style>

    <style name="PurpleTextView" parent="TitleTextView">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="PurpleGrayTextView" parent="TitleTextView">
        <item name="android:textColor">@color/purple_gray</item>
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="SubtitleTextView">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TopRoundedCornerLayout">
        <item name="android:background">@drawable/top_round_corner</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@drawable/bg_button_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonJapaneseLaurelGreenCorner5Size48">
        <item name="android:layout_marginStart">@dimen/margin_l</item>
        <item name="android:layout_marginEnd">@dimen/margin_l</item>
        <item name="android:background">@drawable/bg_btn_japanese_laurel_green_corner5_size48</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_l</item>
    </style>

    <style name="SignInButton" parent="ButtonJapaneseLaurelGreenCorner5Size48">
        <item name="android:layout_marginStart">@dimen/margin_60dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_60dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/text_size_l</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/selector_menu</item>
        <item name="itemTextColor">@drawable/selector_menu</item>
        <item name="color">@color/blue_gray</item>
        <item name="itemIconSize">20dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="GeneralCardView">
        <item name="cardCornerRadius">@dimen/radius_card</item>
    </style>
    <style name="MediumCardView">
        <item name="cardCornerRadius">@dimen/radius_card_m</item>
    </style>

    <style name="RoundCardView">
        <item name="cardCornerRadius">@dimen/radius_medium</item>
    </style>

    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/dark_gray</item>
    </style>

    <style name="SwitchCompatStyle2" >
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color</item>
    </style>

</resources>